/* page/component/course/details/details.wxss */
@import '../../../common/common.wxss';
@font-face {
  font-family: 'iconfont';  /* project id 572620 */
  src: url('//at.alicdn.com/t/font_572620_z4lcug3tlxy4aemi.eot');
  src: url('//at.alicdn.com/t/font_572620_z4lcug3tlxy4aemi.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_572620_z4lcug3tlxy4aemi.woff') format('woff'),
  url('//at.alicdn.com/t/font_572620_z4lcug3tlxy4aemi.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_572620_z4lcug3tlxy4aemi.svg#iconfont') format('svg');
}

.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-bofang:before { content: "\e624"; }


/* 头部信息css */
.header{
  background: white;
}
.details-img{
  width: 100%;
  height: 300rpx;
  filter: blur(5rpx);
}
/* 头部面包屑 */
.details-BreadcrumbNavigation{
  position: absolute;
  top: 20rpx;
  left: 5rpx;
  font-size: 25rpx;
}
/* 头部标题 */
.details-titles{
  width: 100%;
  position: absolute; 
  font-size: 50rpx;
  top: 100rpx;
  text-align: center;
}
/* 课程描述 */
.details-desc{
  font-size: 30rpx;
  text-indent:2em;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
/* 难度等系数 */
.details-data{
  margin-top: 20rpx;
  border-top: 1rpx dashed ;
  padding-top: 10rpx;
  text-align: center;
  font-size: 30rpx;
  color: #525B4F;
}

/* 课程相关css */
.course-details{
  margin-top: 40rpx;
  background-color: #E6E6E6;
  margin-bottom: 60rpx;
}
.course-infor{
  font-size: 40rpx;
  color: black;
  margin-left: 20rpx;
}
.course-list{
  margin-left: 30rpx;
}
.lists{
  margin-top: 40rpx;
  /* margin-bottom: 40rpx; */
}

.course-charpet{
  margin-top: 40rpx;
   /* margin-bottom: 40rpx; */
}
.charpet-course-name{
  /* height: 30rpx; */
  width: 70%;
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 10rpx;
  
  border: 1rpx solid ;
  font-size: 40rpx;
  border-radius: 5rem;
   padding-bottom: 10rpx; 
   padding-top: 10rpx; 
}
.course-teacher{
position: relative;
  font-size: 30rpx;
  margin-top: 30rpx;
  
}
.teacher{
  margin-top: 30rpx;
  margin-left: 50rpx;
}
.image-teacher{
  border-radius:50rpx;
  height:100rpx;
  width:100rpx;
}
.teacher-name{
  position: relative;
  float: right;
  font-size: 30rpx;
  margin-right: 55%;
  /* top: 20rpx; */

}
.teacher-tell{
  margin-top: 20rpx;
